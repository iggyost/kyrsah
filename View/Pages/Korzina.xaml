        <Button Name="ZakazBtn" Content="Оформить"
                Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource RegistrationButton}" 
                Height="50" Margin="312,10,10,11"
                />
        <Image Grid.Row="1"
               Source="/Resourses/заказ1.png" Margin="10,0,0,0" Grid.Column="1" />
<Image Grid.Row="1"
       Grid.Column="0"
    Source="/Resourses/хунзах.jpg" Stretch="Fill" />

        <TextBlock Text="Заказ №1"
